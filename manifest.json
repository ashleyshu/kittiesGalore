{
    "name": "Kitties Galore",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Let some cute cats increase your spirits!",
    "browser_action": {
        "default_icon": "icons/icon48.png",
        "default_popup": "popup.html",
        "default_title": "Kitties Galore"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["content.js"]
        }
    ],
    "permissions": [
        "<all_urls>",
        "tabs",
        "webNavigation"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
       "128": "icons/icon128.png" 
    }
}